# Server Port
PORT=3000

# LTI (ltijs)
# Das ist ein geheimer Schlüssel. Für den Start kannst du irgendeinen langen Text nehmen.
LTI_KEY=please-change-this-to-a-long-random-string

# ltijs braucht eine Datenbank für Login/Keys/Deployments (standardmäßig MongoDB)
LTI_DB=mongodb://localhost:27017/ltijs

# PostgreSQL (für Anwesenheitsdaten)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=attendance
PG_USER=attendance_user
PG_PASSWORD=secret

TIMEZONE=Europe/Berlin